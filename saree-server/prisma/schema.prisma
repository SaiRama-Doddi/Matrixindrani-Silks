// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  fullName     String
  createdAt    DateTime @default(now())
  sarees       Saree[]
}

model Saree {
  id          String   @id @default(uuid())
  productName String
 categoryId  String?   // updated from category string
  category    Category? @relation(fields: [categoryId], references: [id])
  price       Float
  offerPrice  Float?
  rating      Float?
  image1      String?
  image2      String?
  image3      String?
  createdAt   DateTime @default(now())
  createdBy   String?
  admin       AdminUser? @relation(fields: [createdBy], references: [id])
}


model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  sarees    Saree[]
}